{
  "name": "electronjs",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "electron-rebuild": "electron-rebuild",
    "package-mac": "electron-builder --mac",
    "package-win": "electron-builder --win --x64"
  },
  "devDependencies": {
    "electron": "^13.1.7",
    "electron-builder": "^22.11.7",
    "electron-packager": "^17.1.1",
    "electron-rebuild": "^2.3.5"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.5.28",
    "pdfkit": "^0.13.0",
    "sequelize": "^6.30.0",
    "sqlite3": "^5.0.2"
  },
  "build": {
    "appId": "com.example.electronjs",
    "productName": "ElectronJS App",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "hotel.db",
      "config/**/*",
      "controllers/**/*",
      "models/**/*",
      "migrations/**/*",
      "seeders/**/*",
      "src/**/*"
    ],
    "extraResources": [
      {
        "from": "html/components",
        "to": "components"
      }
    ]
  }
}
